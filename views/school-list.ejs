<%- include('../layouts/header') %>

<div class="container">
    <div class="heading">All Registered Schools List</div>
    <% if(success.length) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Congratz!</strong> <%= success %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
    <% } %>
    <p class="text-right"></p><a href="/school/add" class="btn btn-danger">New Add</a>
    <a href=".." class="btn btn-secondary">Dashboard</a> </p>
    <table class="table table-striped table-bordered">
        <thead>
          <tr style="background-color:rgb(244, 183, 183)">          
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Contact</th>    
            <!-- <th colspan="2">Action</th> -->
          </tr>
          <% all_schools.map(data => { %>
            <tr>                                   
              <td><%=  data.name %> </td>
              <td><%=  data.email %> </td>
              <td><%=  data.contact %> </td>
              <!-- <td><a href="/edit/<%= data._id %>" class="btn btn-success">Edit</a>&nbsp; &nbsp;
                  <a href="/delete/<%= data._id %>" class="btn btn-danger">Delete</a></td> -->
            </tr>
          <% }) %>
        </thead>
        </tbody>
      </table>
</div>



<%- include('../layouts/footer') %>