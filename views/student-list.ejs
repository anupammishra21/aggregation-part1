<%- include('../layouts/header') %>

<div class="container">
    <div class="heading">All Students</div>
    <% if(success.length) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Congratz!</strong> <%= success %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
    <% } %>
    <p class="text-right"></p><a href="/student/add" class="btn btn-info">New Add</a>
    <a href=".." class="btn btn-secondary">Dashboard</a> </p>
    <table class="table table-striped table-bordered">
        <thead>
          <tr style="background-color:rgb(175, 210, 242)">
            <th scope="col">School( Contact )</th>
            <th scope="col">Faculty( Contact )</th>
            <th scope="col">Name</th>
            <th scope="col">Gender</th>
            <th scope="col">Age</th>
            <th scope="col">Email</th>
            <th scope="col">Contact</th> 
            <th scope="col">Image</th>   
            <!-- <th colspan="2">Action</th> -->
          </tr>
          <% all_students.map(data => { %>
            <tr>  
              <td><%=  data.faculty_details.school_details.name %> ( <%=  data.faculty_details.school_details.contact %> ) </td>
              <td><%=  data.faculty_details.name %> ( <%=  data.faculty_details.contact %> )  </td>                     
              <td><%=  data.name %> </td>
              <td><%=  data.gender %> </td>
              <td><%=  data.age %> </td>
              <td><%=  data.email %> </td>
              <td><%=  data.contact %> </td>
              <td><img src="/image-uploads/<%= data.image %>" width="80" height="80" > </td>
              <!-- <td><a href="/edit/<%= data._id %>" class="btn btn-success">Edit</a>&nbsp; &nbsp;
                  <a href="/delete/<%= data._id %>" class="btn btn-danger">Delete</a></td> -->
            </tr>
          <% }) %>
        </thead>
        </tbody>
      </table>
</div>



<%- include('../layouts/footer') %>