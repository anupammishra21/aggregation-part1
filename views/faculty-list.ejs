<%- include('../layouts/header') %>

<div class="container">
    <div class="heading">All Faculties</div>
    <% if(success.length) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Congratz!</strong> <%= success %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
    <% } %>
    <p class="text-right"></p><a href="/faculty/add" class="btn btn-success">New Add</a>
    <a href=".." class="btn btn-secondary">Dashboard</a> </p>
    <table class="table table-striped table-bordered">
        <thead>
          <tr style="background-color:rgb(194, 243, 179)">
            <th scope="col">School</th>
            <th scope="col">Name</th>
            <th scope="col">Teachers(No.)</th>
            <th scope="col">Contact</th>    
            <!-- <th colspan="2">Action</th> -->
          </tr>
          <% all_faculty.map(data => { %>
            <tr>  
              <td><%=  data.school_details.name %> </td>                       
              <td><%=  data.name %> </td>
              <td><%=  data.no_of_teachers %> </td>
              <td><%=  data.contact %> </td>
              <!-- <td><a href="/edit/<%= data._id %>" class="btn btn-success">Edit</a>&nbsp; &nbsp;
                  <a href="/delete/<%= data._id %>" class="btn btn-danger">Delete</a></td> -->
            </tr>
          <% }) %>
        </thead>
        </tbody>
      </table>
</div>



<%- include('../layouts/footer') %>